<h2><%= h @show.name %> - Pages</h2>

<% unless @pages.empty? %>
<ul>
  <% for page in @pages %>
  <li>
    <%= link_to(page.title, [:admin, @show, page]) %>
    <%= link_to "&#x2191;", move_up_admin_show_page_path(@show, page), :class => "up", :title => "Déplacer la page #{page.title}" unless page.first? %>
    <br/>modifiée <%= format_date(page.updated_at) %>, créé <%= format_date(page.created_at) %>
  </li>
  <% end %>
</ul>
<div class="actions">
  <%= link_to "Ajouter une page", new_admin_show_page_path(@show) %>
</div>
<% else %>
<p class="empty">Vous n'avez pas encore ajouté de page dans votre émission.</p>
<div class="actions">
  <%= link_to("Renseigner une première page", new_admin_show_page_path(@show)) %>
</div>
<% end %>

