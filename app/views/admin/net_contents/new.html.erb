<%= error_messages_for(:net_content) %>

<h2>Ajouter un son sur le net</h2>
<p>Episode: <%= @episode.title %></p>

<% form_for [:admin, @show, @episode, @net_content] do |f| %>
 <p><label for="net_content_name">Nom :</label><br/>
 <%= f.text_field :name %></p>

 <p><label for="net_content_slug">Lien :</label><br/>
 <%= f.text_field :slug %></p>

 <p><label for="net_content_url">URL :</label><br/>
 <%= f.text_field :url %></p>

 <p><label for="net_content_duration">Durée (en minutes):</label><br/>
 <%= f.text_field :duration %></p>

 <p><label for="net_content_principal">Contenu principal :</label><%= f.check_box :principal %></p>

 <%= submit_tag "Créer" %> ou <%= link_to "revenir", admin_show_episode_path(@show, @episode) %>
<% end %>
