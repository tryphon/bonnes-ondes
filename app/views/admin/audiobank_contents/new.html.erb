<%= error_messages_for(:audiobank_content) %>

<h2>Ajouter un document AudioBank</h2>
<p>Episode: <%= @episode.title %></p>

<% form_for [:admin, @show, @episode, @audiobank_content] do |f| %>
 <p><label for="audiobank_content_name">Nom :</label><br/>
 <%= f.text_field :name %></p>

 <p><label for="audiobank_content_slug">Lien :</label><br/>
 <%= f.text_field :slug %></p>

 <p>
   <label for="audiobank_content_principal">Contenu principal :</label>
   <%= f.check_box :principal %>
 </p>

 <p><label for="audiobank_content_audiobank_id">Identifiant AudioBank :</label><br/>
 <%= f.text_field :audiobank_id %></p>

 <p>
   <label for="create_audiobank_document">Créer le document AudioBank :</label>
   <%= f.check_box :create_document %>
 </p>

 <%= f.hidden_field :episode_id %>

 <%= submit_tag "Créer" %> ou <%= link_to "revenir", admin_show_episode_path(@show, @episode) %>
<% end %>
