<h2>Modifier une actualit√©</h2>
<p>Emission: <%= @post.show.name %></p>

<% form_for([:admin, @post.show, @post]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, "Titre" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Contenu" %><br />
    <%= textile_editor 'post', 'description', :rows => 20, :cols => 60 -%></p>
  </p>
  <p>
    <%= f.submit "Modifier" %>
    ou <%= link_to 'revenir', admin_show_post_path(@post.show, @post) %>
  </p>

  <%= textile_editor_initialize -%>
<% end %>
